<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">yMusic</a>
    <button class="navbar-toggler" onclick="@ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" onclick="@ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/weather" Match="NavLinkMatch.All">
                <span class="oi oi-cloud"></span> Thời tiết
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/news" Match="NavLinkMatch.All">
                <span class="oi oi-cloudy"></span> Tin tức tổng hợp
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/pick-color" Match="NavLinkMatch.All">
                <span class="oi oi-droplet"></span> Color Picker
            </NavLink>
        </li>
    </ul>
</div>

@functions {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
